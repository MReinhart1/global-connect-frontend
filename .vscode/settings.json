{
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "eslint.rules.customizations": [{ "rule": "*", "severity": "warn" }],
  "typescript.tsdk": "node_modules/typescript/lib",
  // tell VS Code to always open .css files in Tailwind CSS mode to avoid tailwind parsing error
  "files.associations": {
    "*.css": "tailwindcss"
  }
}
